    "version": "0.2.0",
    "configurations": [

        {
            "name": "weight_tracking_app",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "chrome",
                "--web-experimental-hot-reload"
            ]
        },
        {
            "name": "weight_tracking_app (Android emulator)",
            "request": "launch",
            "type": "dart",
            "args": [
              "-d",
              "emulator-5554"  // Replace with your actual emulator ID
            ]
        },
        {
            "name": "weight_tracking_app (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "weight_tracking_app (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}
